<table class="table table-striped table-hover" data-sort="table">
    <caption>Total : {{ documents|length }}</caption>
    <thead>
    <tr>
        <th>Label</th>
        <th>Category</th>
        <th>User</th>
        <th>Size</th>
        <th>Updated</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for document in documents %}
        <tr>
            <td>{{ document.title }}</td>
            <td>{{ document.category }}</td>
            <td>{{ document.user }}</td>
            <td>{{ document.size }}</td>
            <td>{{ document.updatedAt|date }}</td>
            <td>
                <div class="pull-right btn-group btn-group-sm" role="group" aria-label="Action buttons">
                    <a href="{{ url('admin_document_edit', {id: document.id}) }}" class="btn btn btn-info-outline"><i class="fa fa-edit"></i> Edit</a>
                    <a href="{{ url('admin_document_delete', {id: document.id}) }}" class="btn btn btn-danger-outline delete-link"><i class="fa fa-remove"></i> Delete</a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>