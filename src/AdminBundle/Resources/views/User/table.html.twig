<table class="table table-striped table-hover" data-sort="table">
    <caption>Total : {{ users|length }}</caption>
    <thead>
    <tr>
        <th>Username</th>
        <th>Articles</th>
        <th>Documents</th>
        <th>Events</th>
        <th>Votes</th>
        <th>Hive</th>
        <th>Updated</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.username }}</td>
            <td>{{ user.articles|length }}</td>
            <td>{{ user.documents|length }}</td>
            <td>{{ user.events|length }}</td>
            <td>{{ user.votes|length }}</td>
            <td>{{ user.hive }}</td>
            <td>{{ user.updatedAt|date }}</td>
            <td>
                <div class="pull-right btn-group btn-group-sm" role="group" aria-label="Action buttons">
                    <a href="{{ url('admin_user_edit', {id: user.id}) }}" class="btn btn btn-info-outline"><i class="fa fa-edit"></i> Edit</a>
                    <a href="{{ url('admin_user_delete', {id: user.id}) }}" class="btn btn btn-danger-outline delete-link"><i class="fa fa-remove"></i> Delete</a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>