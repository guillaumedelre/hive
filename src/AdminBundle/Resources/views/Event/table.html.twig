<table class="table table-striped table-hover" data-sort="table">
    <caption>Total : {{ events|length }}</caption>
    <thead>
    <tr>
        <th>Libellé</th>
        <th>Début</th>
        <th>Fin</th>
        <th>Type</th>
        <th>Mise à jour</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for event in events %}
        <tr>
            <td>{{ event.title }}</td>
            <td>{{ event.startAt|date('d/m/Y') }}</td>
            <td>{{ event.endAt|date('d/m/Y') }}</td>
            <td>{{ event.type|capitalize }}</td>
            <td>{{ event.updatedAt|date('d/m/Y') }}</td>
            <td>
                <div class="pull-right btn-group btn-group-sm" role="group" aria-label="Action buttons">
                    <a href="{{ url('admin_event_edit', {id: event.id}) }}" class="btn btn btn-info-outline"><i class="fa fa-edit"></i> Editer</a>
                    <a href="{{ url('admin_event_delete', {id: event.id}) }}" class="btn btn btn-danger-outline delete-link"><i class="fa fa-remove"></i> Supprimer</a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>