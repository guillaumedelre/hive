{% if  totalPages > 0 %}
<ul class="pagination">
    {% if currentPage > 0 %}
        <li>
            <a href="{{ url("admin_event_index", {'offset': currentPage - 1 }) }}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
    {% endif %}

    {% for page in 0..totalPages - 1 %}
        <li {% if page == currentPage %}class="active"{% endif %}>
            <a href="{{ url("admin_event_index", {'offset': page}) }}">{{ page + 1 }}</a>
        </li>
    {% endfor %}

    {% if currentPage < totalPages - 1 %}
        <li>
            <a href="{{ url("admin_event_index", {'offset': currentPage + 1}) }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    {% endif %}
</ul>
{% endif %}
