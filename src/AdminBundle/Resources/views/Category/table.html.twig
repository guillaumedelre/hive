<table class="table table-striped table-hover" data-sort="table">
    <caption>Total : {{ categories|length }}</caption>
    <thead>
    <tr>
        <th>Libellé</th>
        <th>Articles</th>
        <th>Documents</th>
        <th>Utilisateur</th>
        <th>Mise à jour</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for category in categories %}
        <tr>
            <td>{{ category.label }}</td>
            <td>{{ category.articles|length }}</td>
            <td>{{ category.documents|length }}</td>
            <td>{{ category.user.fullname }}</td>
            <td>{{ category.updatedAt|date('d/m/Y') }}</td>
            <td>
                <div class="pull-right btn-group btn-group-sm" role="group" aria-label="Action buttons">
                    <a href="{{ url('admin_category_edit', {id: category.id}) }}" class="btn btn btn-info-outline"><i class="fa fa-edit"></i> Editer</a>
                    <a href="{{ url('admin_category_delete', {id: category.id}) }}" class="btn btn btn-danger-outline delete-link"><i class="fa fa-remove"></i> Supprimer</a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>