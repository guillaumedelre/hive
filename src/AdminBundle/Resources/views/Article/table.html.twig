<table class="table table-striped table-hover" data-sort="table">
    <caption>Total : {{ articles|length }}</caption>
    <thead>
    <tr>
        <th>Titre</th>
        <th>Auteur</th>
        <th>Catégorie</th>
        <th>Mise à jour</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for article in articles %}
        <tr>
            <td>{{ article.title }}</td>
            <td>{{ article.author.fullname }}</td>
            <td>{{ article.category }}</td>
            <td>{{ article.updatedAt|date('d/m/Y') }}</td>
            <td>
                <div class="pull-right btn-group btn-group-sm" role="group" aria-label="Action buttons">
                    <a href="{{ url('admin_article_edit', {id: article.id}) }}" class="btn btn btn-info-outline"><i class="fa fa-edit"></i> Editer</a>
                    <a href="{{ url('admin_article_delete', {id: article.id}) }}" class="btn btn btn-danger-outline delete-link"><i class="fa fa-remove"></i> Supprimer</a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>