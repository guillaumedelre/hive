<table class="table table-striped table-hover" data-sort="table">
    <caption>Total : {{ hives|length }}</caption>
    <thead>
    <tr>
        <th>Libellé</th>
        <th>Utilisateurs</th>
        <th>Mise à jour</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for hive in hives %}
        <tr>
            <td>
                <a href="{{ url('app_default_index', {"hiveSlug": hive.slug}) }}" target="_blank" class="btn btn-link">{{ hive.label }}</a>
            </td>
            <td>{{ hive.users|length }}</td>
            <td>{{ hive.updatedAt|date }}</td>
            <td>
                <div class="pull-right btn-group btn-group-sm" role="group" aria-label="Action buttons">
                    <a href="{{ url('admin_hive_edit', {id: hive.id}) }}" class="btn btn btn-info-outline"><i class="fa fa-edit"></i> Editer</a>
                    <a href="{{ url('admin_hive_delete', {id: hive.id}) }}" class="btn btn btn-danger-outline delete-link"><i class="fa fa-remove"></i> Supprimer</a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>