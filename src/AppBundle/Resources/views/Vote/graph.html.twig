<div class="col-sm-3 m-b-md">
    <div class="w-lg m-x-auto">
        <h3>{{ event.title|capitalize }}</h3>
        <p>{{ event.description|slice(0, 255) }}...</p>
        <canvas
                class="ex-graph"
                width="200" height="200"
                data-chart="doughnut"
                data-value="[{ value: 230, color: '#e64759', label: 'Non' }, { value: 130, color: '#1bc98e', label: 'Oui' }]"
                data-segment-stroke-color="#252830">
        </canvas>
    </div>
</div>
